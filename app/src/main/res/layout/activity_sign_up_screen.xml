<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backbtn"
                android:padding="10dp"
                android:clickable="true"
                android:id="@+id/img"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotofontnormal"
                android:textSize="30dp"
                android:textColor="#000000"
                android:text="Create a new account?"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:background="#ffff"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/etbg"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotofontnormal"
                    android:layout_marginRight="10dp"
                    android:hint="First Name"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/etbg"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotofontnormal"
                    android:layout_marginRight="10dp"
                    android:hint="Last Name"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etbg"
                android:textSize="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/robotofontnormal"
                android:layout_marginRight="10dp"
                android:hint="Email"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etbg"
                android:textSize="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/robotofontnormal"
                android:layout_marginRight="10dp"
                android:hint="Phone Number"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etbg"
                android:textSize="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/robotofontnormal"
                android:layout_marginRight="10dp"
                android:hint="Password"
                />
            <EditText
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotofontnormal"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:inputType="textPassword"
                android:background="@drawable/etbg"
                android:hint="Confirm Password"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotofontnormal"
                android:layout_height="wrap_content"
                android:text="By clicking 'Sign Up' you are agree to our terms and conditons as well as our privacy policy"
                android:paddingLeft="10dp"
                android:id="@+id/txt1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="SIGN UP"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="#ffff"
                android:layout_alignParentBottom="true"
                android:background="#6595eb"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="15dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_height="match_parent">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:background="#e3dddc"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/robotofontnormal"
                android:text="Or use Social Media"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="#e3dddc"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:weightSum="2"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/etbg"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/loginwithgoogle"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GOOGLE"
                            android:fontFamily="@font/robotofontnormal"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"

                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/etbg2"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="60dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/loginwithfacebook"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FACEBOOK"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="@font/robotofontnormal"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have account?"
                android:fontFamily="@font/robotofontnormal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#6595eb"
                android:fontFamily="@font/robotofontnormal"
                android:textStyle="bold"
                android:clickable="true"
                android:id="@+id/btnlogin"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>