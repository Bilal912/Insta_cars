<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffff"
    tools:context="screen.screenfrgone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="18dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/gotham"
        android:layout_gravity="top|right"
        android:id="@+id/backone"
        />

    <ImageView
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_height="330dp"
        android:src="@drawable/screentwo"
        android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tempy"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Post and Sell"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:fontFamily="@font/gotham"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's us help to buy perfect car. Right place to know about your Transportaion"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    </LinearLayout>
  <!--  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="26dp"
        android:layout_gravity="bottom|end"
        android:paddingTop="100dp"
        android:gravity="end|bottom"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/nextone"
        /> -->

    <LinearLayout
        android:id="@+id/tempy"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/dot"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >


        </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:fontFamily="@font/gotham"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/nextone"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botton_bordery"
        />
    </LinearLayout>

</RelativeLayout>
