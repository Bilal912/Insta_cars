<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panaceasoft.admotors.Review_Add">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Add Review"
        android:background="@color/global__primary"
        android:textColor="#fff"
        android:textSize="19sp"
        android:textAlignment="center"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:layout_margin="20dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_review"
        android:layout_margin="20dp"
        android:textSize="17sp"
        android:textColor="#000"
        android:text="22-33-444"
        android:textAlignment="center"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_star1"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_star2"
            android:layout_toRightOf="@+id/img_star1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_star3"
            android:layout_toRightOf="@+id/img_star2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_star4"
            android:layout_toRightOf="@+id/img_star3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_star5"
            android:layout_toRightOf="@+id/img_star4"
            android:layout_marginTop="5dp"

            android:layout_marginLeft="15dp"
            android:src="@drawable/star"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Message:"
        android:layout_margin="20dp"
        android:textColor="@color/text__primary_dark"
        android:textSize="17sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"


        android:id="@+id/ed_message"
        android:layout_marginBottom="20dp"

        android:textColor="#000"
        android:textSize="15sp"
        android:hint="Enter Message Here"

        android:gravity="start"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:textColor="#fff"/>


</LinearLayout>
