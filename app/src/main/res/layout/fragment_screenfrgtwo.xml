<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffff"
    tools:context="screen.screenfrgtwo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="18dp"
        android:fontFamily="@font/gotham"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="top|right"
        android:id="@+id/backtwo"
        />
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/screenthree"
        android:paddingTop="30dp"
        android:layout_height="330dp"
        android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/tempy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Transport"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:fontFamily="@font/gotham"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's us help to buy perfect car. Right place to know about your Transportaion"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


 <!--   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="26dp"
        android:layout_gravity="bottom|end"
        android:paddingTop="100dp"
        android:clickable="true"
        android:focusable="true"
        /> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tempy"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/dot"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:fontFamily="@font/gotham"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/nexttwo"
            android:layout_alignParentBottom="true"
            android:background="@drawable/botton_bordery"
            />
    </LinearLayout>


</RelativeLayout>